    <script>
      let searchResults = <%- JSON.stringify(검색결과) %>;

    function displaySearchResults() { 
    const searchResultsContainer = document.querySelector(".search-results");

    searchResultsContainer.innerHTML = "";

    searchResults.forEach(doc => {
        const resultCard = document.createElement("div");
        resultCard.classList.add("card");

        const resultCardBody = document.createElement("div");
        resultCardBody.classList.add("card-body");

        const titleLink = document.createElement("a"); // 링크를 생성
        titleLink.href = doc.link; 

        const titleElement = document.createElement("h5");
        titleElement.classList.add("card-title");
        titleElement.textContent = doc.title;

        const typeElement = document.createElement("p");
        typeElement.classList.add("card-text");

        typeElement.innerHTML = `
        <strong>유형:</strong> ${doc.type}<br><br>
        <strong>기간:</strong> ${doc.day}<br>
        <strong>운영시간:</strong> ${doc.time}`;

        const locationElement = document.createElement("p");
        locationElement.classList.add("card-text");
        locationElement.textContent = `Location: ${doc.Location}`;

        titleLink.appendChild(titleElement); 

        resultCardBody.appendChild(titleLink);
        resultCardBody.appendChild(typeElement);
        resultCardBody.appendChild(locationElement);
        resultCard.appendChild(resultCardBody);

        searchResultsContainer.appendChild(resultCard);
      });
    }
