<script>

  document.querySelector('#searchButton').addEventListener("click", function() 
  {
    const selectedLocation = document.querySelector('input[name="gyeonggi"]:checked');
    const selectedEvent = document.querySelector('input[name="event"]:checked');
    
    const locationValue = selectedLocation.value;
    const eventValue = selectedEvent.value;

    const requestData = {
      gyeonggi: locationValue,
      event : eventValue
    };

    fetch('/search', {
      method: 'POST',
      headers: {
        'Content-Type' : 'application/json'
      },
      body: JSON.stringify(requestData)
    })
      .then(response => response.text())
      .then(data => {
        console.log(data);
      })
      .catch(error => {
        console.error('Error:', error);
      });
  });
  
  </script>



